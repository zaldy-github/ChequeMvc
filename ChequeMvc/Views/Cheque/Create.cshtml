@model ChequeMvc.Entities.ChequeEntity

@{
    ViewData["Title"] = "Issue Cheque";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.chequePayee, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.chequePayee, new { htmlAttributes = new { @class = "form-control", placeholder = "Cheque payee" } })
            </div>
            <div class="cold-md-4">
                @Html.ValidationMessageFor(model => model.chequePayee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.chequeAmount, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.chequeAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "Cheque amount" } })
            </div>
            <div class="col-md-8">
                @Html.ValidationMessageFor(model => model.chequeAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.chequeDate, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.chequeDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Cheque date" } })
            </div>
            <div class="col-md-9">
                @Html.ValidationMessageFor(model => model.chequeDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
